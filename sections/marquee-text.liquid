<style>
  .marquee-container {
    width: 100%;
    overflow: hidden;
    background: {{ section.settings.background_color }};
    padding: 1.1rem 0;
  }

  .marquee-content {
    display: flex;
    animation: marquee {{ section.settings.animation_duration }}s linear infinite;
    white-space: nowrap;
    width: fit-content;
  }

  .marquee-text {
    color: {{ section.settings.text_color }};
    font-family: var(--font-americana);
    font-size: {{ section.settings.font_size }};
    padding: 0 2rem;
    flex-shrink: 0;
  }

  @keyframes marquee {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-6.67%); /* Adjusted to match 15 text elements */
    }
  }

  @media screen and (max-width: 749px) {
    .marquee-text {
      font-size: {{ section.settings.font_size }};
    }
  }
</style>

